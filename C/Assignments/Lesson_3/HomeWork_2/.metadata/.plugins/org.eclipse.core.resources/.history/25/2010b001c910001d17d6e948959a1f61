#include <stdio.h>

int main(void)
{
	unsigned int num=0,fact=1,i=0;
	printf ("Enter the integer number: ");
	fflush(stdout);		fflush(stdin);
	scanf("%u",&num);
	if(num<0)
		printf("it doesn't exist");
	else
	{
		if(num==0)
				fact=1;
			else
			{
				for(i=1;i<=num;i++)
				{
					fact *= i ;
				}
			}
		printf("Fact= %d",fact);
	}



}
