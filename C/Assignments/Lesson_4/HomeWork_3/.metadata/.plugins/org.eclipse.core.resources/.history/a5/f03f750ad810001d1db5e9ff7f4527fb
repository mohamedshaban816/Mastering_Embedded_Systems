#include <stdio.h>

int main(void)
{
	int n=0;
	float arr1[2];
	int i;
	printf("Enter the array elements\n");
	fflush(stdout);		fflush(stdin);
	for(i=0;i<2;i++)
	{
		for(j=0;j<2;j++)
		{
			printf("Enter the element %d%d: ",i,j);
			fflush(stdout);		fflush(stdin);
			scanf("%f",&arr1[i][j]);
		}

	}

	return 0;
}
